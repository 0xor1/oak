@page "/org/{OrgId}/project/{ProjectId}/task/{TaskId}"
@using Oak.I18n
@using Common.Client
@using Oak.Client.Lib
@inject L L;
@inject UiCtx Ctx
<PageTitle>@(Ctx.Project?.Name ?? @L.S(S.Tasks))</PageTitle>
<TaskView OrgId="@OrgId" ProjectId="@ProjectId" TaskId="@TaskId"/>

@code{
    [Parameter]
    public string OrgId { get; set; }
    [Parameter]
    public string ProjectId { get; set; }
    [Parameter]
    public string TaskId { get; set; }
}